
<div class="container">
    <h1>Добавить курс</h1>
    <form action="/add" method="post">
        <div class="input-field">
          <input name="title"  id="title" type="text" class="validate" required>
          <label for="title">Укажите название курса</label>
          <span class="helper-text" data-error="Введите название курса"></span>
        </div>
        <div class="input-field">
          <input name="price"  id="price" type="text" class="validate" required min="1">
          <label for="price">Цена курса</label>
          <span class="helper-text" data-error="Введите цену курса"></span>
        </div>
        <div class="input-field">
          <input name="img" id="img" type="text" class="validate" required >
          <label for="img">Картинка курса</label>
          <span class="helper-text" data-error="Введите url изображения"></span>
        </div>

        <button class="btn btn-primary">Добавить курс</button>
    </form>
</div>